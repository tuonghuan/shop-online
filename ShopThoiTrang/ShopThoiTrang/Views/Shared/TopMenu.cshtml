@model List<Model.EF.Menu>

<div class="call">
    <p><span>Need help?</span> call us <span class="number">0120 390 6049</span></span></p>
</div>
<div class="account_desc">
    @{
        var session = (UserLogin)Session[ShopThoiTrang.Common.CommonConstants.USER_SESSION];
    }
    @if (session == null)
    {
         <ul>
       
        @foreach (var item in Model)
        {
             <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
        }
       
        
    </ul>
    }
    else
    {
        <ul>
            <li>Xin chào: @session.UserName </li>
            <li>@Html.ActionLink("Thoát","Logout","User")</li>
        </ul>
    }
    
</div>
<div class="clear"></div>
