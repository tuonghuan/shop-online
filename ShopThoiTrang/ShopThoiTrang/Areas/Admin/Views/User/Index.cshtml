@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản Lý Người Dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{

    Danh Sách Người Dùng
}
@section jsFooter{
    
<script src="/Assets/Admin/js/controller/userController.js"></script>
    }
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách Người Dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "User", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="input-group custom-search-form">
                                <input type="text" name="searchString" class="form-control" value="@ViewBag.SearchString" placeholder="Search/Name/UserName...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="fa fa-search"></i>
                                        
                                    </button>
                                   
                                </span>
                               
                            </div>
                            
                        </div>
                        <a  class="btn btn-primary" href="/Admin/User/Create">Thêm Mới</a>
                    </div>

                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Tài Khoản</th>
                                <th>Tên</th>
                                <th>Email</th>
                                <th>Trạng Thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.UserName</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status ? "Kích Hoạt" : "Khóa")</a></td>
                                    <td class="col-lg-2">
                                        <a href="/Admin/User/Edit/@item.ID" class="btn btn-success">Sửa</a>

                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn Có Chắc Muốn Xóa Bản Ghi Này Không?",
                                   OnComplete = "$('#row_" + @item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               }, new { @class = "btn btn-danger" })

                                        
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>